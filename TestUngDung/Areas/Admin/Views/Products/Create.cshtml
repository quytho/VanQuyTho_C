@model ModelEF.EF.Product
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save"></i>&nbsp;Tạo mới Sản Phẩm
}

@using (Html.BeginForm("Create", "Products", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12" form-group>
            <div class="col-md-6">
                @Html.ActionLink("Quay lai", "Index", "Products", new { @class = "btn btn-primary" })
            </div>
        </div>

        <div class="col-lg-12" form-group>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Mời nhập tên sản phẩm" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UnitCost, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UnitCost, new { @class = "form-control", @placeholder = "Mời nhập đơn giá sản phẩm" })
                    @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger", })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @placeholder = "Mời nhập số lượng sản phẩm" })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger", })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Image, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Image, new { @class = "form-control", @placeholder = "Mời nhập hình ảnh sản phẩm" })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger", })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Mời nhập mô tả sản phẩm" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Category_ID, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Category_ID,(IEnumerable<SelectListItem>)ViewBag.Category_ID, "--Chọn mã category_id", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Category_ID, "", new { @class = "text-danger", })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @placeholder = "Mời nhập trạng thái sản phẩm" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-danger" />
                </div>
            </div>
        </div>
    </div>
}
